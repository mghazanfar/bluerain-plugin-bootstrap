{
  "name": "bluerain-plugin-bootstrap",
  "version": "1.0.0",
  "description": "This plugin will provide ui components for bootstrap theme. Components are registered in bluerain context.",
  "main": "index.js",
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "lint": "tslint $(find . -name '*.ts' ! -ipath '*node_modules*')",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlueEastCode/bluerain-plugin-bootstrap.git"
  },
  "keywords": [
    "bootstrap",
    "bluerain",
    "ui",
    "components"
  ],
  "author": "BlueEast Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BlueEastCode/bluerain-plugin-bootstrap/issues"
  },
  "homepage": "https://github.com/BlueEastCode/bluerain-plugin-bootstrap#readme",
  "devDependencies": {
    "@blueeast/tslint-config-blueeast": "^0.5.1",
    "@storybook/addon-storyshots": "^3.2.17",
    "@storybook/react": "^3.3.3",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.0",
    "@types/react-dom": "^16.0.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/storybook__react": "^3.0.5",
    "awesome-typescript-loader": "^3.4.1",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.0",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.51.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "semantic-release": "^8.0.0",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.8.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.3.4",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "@blueeast/bluerain-os": "^0.5.0",
    "@blueeast/bluerain-ui-interfaces": "^2.0.4",
    "bluerain-icons": "git+ssh://git@bitbucket.org:be-iot-platform/bluerain-icons.git#develop",
    "@storybook/addon-info": "^3.3.1",
    "@storybook/addon-knobs": "^3.3.1",
    "bootstrap": "4.0.0-beta.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-intl": "^2.4.0",
    "react-test-renderer": "^16.2.0",
    "reactstrap": "^5.0.0-alpha.4",
    "storybook-addon-rtl": "^0.1.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
